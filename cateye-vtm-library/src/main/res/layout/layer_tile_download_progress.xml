<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:id="@+id/bpb_tile_download"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:animated="true"
            app:bootstrapBrand="info"
            app:bootstrapMaxProgress="100"
            app:bootstrapProgress="53" />

        <TextView
            android:id="@+id/tv_tile_download"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layer_margin_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bbtn_tile_download_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="取消"
                app:bootstrapBrand="danger"></com.beardedhen.androidbootstrap.BootstrapButton>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bbtn_tile_download_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确定"
                app:bootstrapBrand="info"></com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

