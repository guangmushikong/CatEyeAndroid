<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.oscim.android.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <!--用于显示操作工具栏的布局-->
    <RelativeLayout
        android:id="@+id/layer_main_cateye_fragment_operate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_select_local_map_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_local_map_file" />

            <Button
                android:id="@+id/btn_select_net_map_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_net_map_file" />

            <Button
                android:id="@+id/btn_select_geoJson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_geoJson_file" />

            <Button
                android:id="@+id/btn_draw_plp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draw_point_line_polygon" />
        </LinearLayout>
    </RelativeLayout>
    <!--用来显示fragment的布局文件,底部-->
    <FrameLayout
        android:id="@+id/layer_main_cateye_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"></FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chk_draw_vector_point"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:padding="@dimen/button_padding_default"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_vector_point"
                android:text="@null" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/button_padding_default"></View>

            <ImageView
                android:id="@+id/chk_draw_vector_line"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:padding="@dimen/button_padding_default"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_vector_polyline"
                android:text="@null" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/button_padding_default"></View>

            <ImageView
                android:id="@+id/chk_draw_vector_polygon"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:padding="@dimen/button_padding_default"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_vector_polygon"
                android:text="@null" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_vertical_margin"></View>

            <ImageView
                android:id="@+id/img_location"
                android:background="@drawable/selector_bg_blue_frame_white_bg_4_radius"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:padding="@dimen/button_padding_default"
                android:src="@drawable/selector_icon_location" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
