<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>
            <com.cengalabs.flatui.views.FlatEditText
                android:layout_marginTop="@dimen/button_padding_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="60"
                android:maxLines="1"
                android:minWidth="200dp"
                android:paddingLeft="@dimen/button_padding_default"
                android:paddingRight="@dimen/button_padding_default"
                android:hint="请输入用户名"
                flatui:fl_fieldStyle="fl_box"
                flatui:fl_theme="@array/custom_theme" />
            <com.cengalabs.flatui.views.FlatEditText
                android:layout_marginTop="@dimen/button_padding_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="60"
                android:maxLines="1"
                android:minWidth="200dp"
                android:paddingLeft="@dimen/button_padding_default"
                android:paddingRight="@dimen/button_padding_default"
                android:hint="请输入密码"
                flatui:fl_fieldStyle="fl_box"
                flatui:fl_theme="@array/custom_theme" />
    </LinearLayout>
</RelativeLayout>
